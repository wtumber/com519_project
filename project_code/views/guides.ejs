  <%- include('common/header'); -%>

  <main class="container " style="flex: 1 0 auto;">

    <div class="text-center">
      <p class="blog-header-logo text-dark" style="margin-bottom: 0rem !important ;">All resources</p>
    </div>

    <div class="text-center">
      <a class="blog-header-logo text-dark"  href="/add_resource"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
        </svg></a> |
      <a class="blog-header-logo text-dark"  href="/"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-funnel-fill" viewBox="0 0 16 16">
          <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2z"/>
        </svg></a>
    </div>
    
    <div class="row mb-3">
      <% const userid = user.username; %>
      <% guides.forEach(guide => { %>


      <div class="col-md-4">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary"><%= guide.author %> | <%= guide.language %></strong>
              <h5 class="mb-0"><%= guide.title %></h5>              
              <div class="mb-1 text-muted">Recommended by <i><%= guide.recommended_by %></i></div>
              <p class="card-text mb-auto"><%= guide.description %></p>
              <div>
                <a href="<%= guide.link %>" class="stretched-link link-secondary">Go to site</a>
                <% if(user) { %>
                 | 
                <a href="#" class="stretched-link">
                  Save</a>
                <% const recommended_name = guide.recommended_by; %>
                 <%}%> <% if(!(userid ===  recommended_name)) { %>
                 | <a href="#" class="stretched-link">Review this</a>
                <%}%>

                <% var recommended_name = guide.recommended_by; %>
                <% if(userid === recommended_name) { %>  
                 | <a href="#" class="stretched-link">
                  Edit</a>
                 | <a href="#" class="stretched-link">Delete</a>
                <%}%>
                </div>
            </div>
          </div>
        </div>   

        
        <%})%>

